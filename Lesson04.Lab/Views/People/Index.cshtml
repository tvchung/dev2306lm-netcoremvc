@model IEnumerable<Lesson04.Lab.Models.People>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Avatar)*@
                <img src="@item.Avatar" alt="@item.Name" width="60px"/>
            </td>
            <td>
                    @*@Html.DisplayFor(modelItem => item.Birthday.ToShortDateString())*@
                    @item.Birthday.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Gender)*@
                @if(item.Gender==0){
                      <span>Cty</span>
                }else if(item.Gender==1){
                    <span>Nam</span>
                }else{
                    <span>Nữ</span>
                }
            </td>
            <td  style="width:250px; text-align:center">
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id /* id=item.PrimaryKey */ }, new {@class="btn btn-primary"})
                    @Html.ActionLink("Details", "Details", new {  id=item.Id /* id=item.PrimaryKey */ }, new {@class="btn btn-success"})
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id /* id=item.PrimaryKey */ }, new {@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
